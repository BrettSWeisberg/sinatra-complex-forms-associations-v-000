<h1>Update Pet</h1>
<form method="POST" action="/pets/<%=@pet.id%>">



  <p>Pet Name:<input type="text" id="pet_name" name= "pet_name" value= "<%=@pet.name%>"></p><br>
  <p>Owner Name:<input type="text" id="owner[name]" name="owner_name" value="<%=@owners.find(@pet.owner_id)[:name]%>"><p><br>
    <%Owner.all.each do |owner|%>

      <input type="radio" name="owner_name" id="<%= owner.name%>" value="<%=owner.name%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></input>
    <%end%>
  <input type="submit" id="Update" value="Update Pet">
</form>
